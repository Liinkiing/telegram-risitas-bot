{
  "compilerOptions": {
    "lib": [
      "esnext",
    ],
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots" : ["./node_modules/@types"],
    "paths": {
      "*": [
        "node_modules/",
        "src/types/*"
      ]
    }
  },

  "include": [
    "src/**/*",
    "index.ts"
  ]
}
